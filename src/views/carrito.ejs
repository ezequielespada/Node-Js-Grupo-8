<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito | Funkoshop</title>
    <link rel="stylesheet" href="../../css/index.css">
    <link rel="stylesheet" href="../../css/shop/carrito.css">
</head>

<body>
    <%- include('partials/header') %>

    <main class="main-container">

        <section class="cart">
            <h1 class="cart__title">CARRITO DE COMPRAS</h1>
            <section class="cart__details">
                <li class="details__product">
                    <p>DETALLE DE PRODUCTO</p>
                </li>
                <li class="details__count">
                    <p>CANTIDAD</p>
                </li>
                <li class="details__total">
                    <p>TOTAL</p>
                </li>
            </section>
            <!----------------------- LISTA DE PRODUCTOS ----------------------->
            <article class="cart__item">
                <div class="item">
                    <img class="item__img" src="../../img/products/star-wars/baby-yoda-1.webp" alt="imagen de producto">
                    <div class="item__details">
                        <p class="details__title">BABY YODA BLUEBALL</p>
                        <p class="details__subtitle">STAR WARS</p>
                        <p class="details__price">precio: $ 1799,99</p>
                    </div>
                </div>
                <div class="button__count">
                    <input class="count" type="number" value="0" id="quantity">
                    <div class="button__add-subtract">
                        <button class="add-subtract" id="add">+</button>
                        <button class="add-subtract" id="subtract">-</button>
                    </div>
                </div>
                <div class="price">
                    <p>$3599,98</p>
                </div>
                <a class="cart__delete" href="">
                    <iconify-icon class="cart__delete-front" icon="typcn:delete-outline" style="color: #f24e1e;" width="38" height="38"></iconify-icon>
                    <iconify-icon class="cart__delete-hover" icon="typcn:delete" style="color: #f24e1e;" width="38" height="38"></iconify-icon>
                </a>
            </article>

            <article class="cart__item">
                <div class="item">
                    <img class="item__img" src="../../img/products/pokemon/pidgeotto-box.webp" alt="imagen de producto">
                    <div class="item__details">
                        <p class="details__title">PIDGEOTTO</p>
                        <p class="details__subtitle">POKEMON</p>
                        <p class="details__price">precio: $ 1799,99</p>
                    </div>
                </div>
                <div class="button__count">
                    <input class="count" type="number" value="2" id="quantity">
                    <div class="button__add-subtract">
                        <button class="add-subtract" id="add">+</button>
                        <button class="add-subtract" id="subtract">-</button>
                    </div>
                </div>
                <div class="price">
                    <p>$1799,99</p>
                </div>
                <a class="cart__delete" href="">
                    <iconify-icon class="cart__delete-front" icon="typcn:delete-outline" style="color: #f24e1e;" width="38" height="38"></iconify-icon>
                    <iconify-icon class="cart__delete-hover" icon="typcn:delete" style="color: #f24e1e;" width="38" height="38"></iconify-icon>
                </a>
            </article>
        </section>

        <!----------------------- RESUMEN DE LA COMPRA ----------------------->
        <div class="summary">
            <h2 class="cart__title">RESUMEN</h2>
            <section class="summary__details">
                <li class="details__elements">
                    <p class="details__text">CANTIDAD DE ELEMENTOS</p>
                    <p class="details__number">3</p>
                </li>
                <li class="details__subtotal">
                    <p class="details__text">SUBTOTAL</p>
                    <p class="details__number">$ 5399,97</p>
                </li>
                <li class="details__shipping">
                    <p class="details__text">ENV√çO</p>
                    <p class="details__number">$ 0,00</p>
                </li>
                <li class="details__total">
                    <p class="total__text">TOTAL</p>
                    <p class="total__number">$ 5399,97</p>
                </li>
            </section>
            <section>
                <button class="pay__button">IR A PAGAR</button>
            </section>
        </div>

    </main>

    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="../../js/add-subtract.js"></script>
</body>

</html>